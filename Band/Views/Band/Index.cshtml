@{
Layout = "_Layout";
}
<div class="container-fluid">
  <h2 class="display-4">Available bands</h2>
  <hr>

  <div class="row">
    <div class="col-md-12">
      @if(Model["Bands"].Count != 0)
      {
        <div class="col-md-2">
          <h5><a class="btn btn-secondary" href="/bands/new">Buy a new band</a></h5>
          <hr>
          <h5><a class="btn btn-secondary" href="/venues/new">Enter a new venue</a></h5>
          <hr>

        </div>
        <ul class="list-group">
          @foreach(var band in Model["Bands"])
          {
            <li class="list-group-item">
              <div class="table-responsive-md">
                <table class="table text-center">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col"><strong>Band Name</strong></th>
                      <th scope="col"><strong>Title</strong></th>
                      <th scope="col"><strong>Actions</strong></th>
                      <th scope="col"><strong>Add Band to Venue</strong></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th>@band.GetId()</th>
                      <td class="w-50 d-inline-flex text-truncate">@band.GetBandName()</td>

                      <td scope="row">
                        <a class="btn btn-secondary" href="/bands/@band.GetId()">Details</a>
                        <hr class="w-25">
                        <a class="btn btn-secondary" href="/bands/@band.GetId()/update">Update</a>
                        <hr class="w-25">
                        <a class="btn btn-secondary" href="/bands/delete">Delete</a>
                      </td>
                      <td>
                        <form class="form" action="~/venues" method="post">
                          <div class="form-group">
                            <input type="hidden" class="form-control"name= "bandid" value="@band.GetId()"  readonly></input>
                            <label for="venue_name">Select Venue:</label>
                            <select class="form-control" name="venue_name">
                              @foreach(var venue in Model["Venues"])
                              {
                                <option value="@venue.GetId()">@venue.GetVenueName()</option>
                              }
                            </select>
                            <hr>
                            <button class="btn btn-secondary" type="submit" name="button">Submit</button>
                          </div>
                        </form>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

            </li>
          }
        </ul>
      } else
      {
        <h5>You haven't entered any bands.</h5>
        <h5><a class="btn btn-secondary" href="/bands/new">Enter a new band</a></h5>
        <h5><a class="btn btn-secondary" href="/">Return home</a></h5>
      }
    </div>
  </div>
</div>
